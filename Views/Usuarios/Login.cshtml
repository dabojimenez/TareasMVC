@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

@*<hr />*@
<div class="card">
    <div class="card-body">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" placeholder="correo@correo.com" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            @*para el campo de recuerdame*@
            <div class="form-check">
                <label class="form-check-label" asp-for="Recuerdame"></label>
                <input class="form-check-input" type="checkbox" asp-for="Recuerdame" />
            </div>

            <button class="btn btn-primary">Login</button>
            <a class="btn btn-success" asp-action="registro">
                Crear una nueva cuenta
            </a>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}