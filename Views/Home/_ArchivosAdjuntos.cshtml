<label>
    <i class="bi bi-paperclip"></i>
    Archivos adjuntos
</label>
<button class="btn btn-secondary btn-sm" onclick="manejarClickAgregarArchivoAdjunto()">
    <i class="bi bi-plus"></i>
</button>
@* multiple, para cargar multiples archivos *@
<input type="file" 
    onchange="manejarSeleccionArchivoTarea(event)" 
    id="archivoATarea" 
    multiple style="display: none"/>

@* se mostraran los distintos archvios adjuntos *@
<div data-bind="foreach: archivosAdjuntos">
    <div>
        @* cuando clicke en el titulo, se le mostrara el texto *@
        <div style="cursor: pointer" class="fw-bold" data-bind="text: titulo, hidden: modoEdicion
                    , click: manejarClickTituloArchivoAdjunto"></div>
        @* mostraremos en el modo edicion *@
        <div data-bind="visible: modoEdicion, event: {focusout: manejarFocusoutTituloArchivoAdjunto}">
            <input name="txtArchivoAdjuntoTitulo" type="text" class="form-control" 
            data-bind="value: titulo, attr:{'data-id': id}"/>
        </div>

        <div>
            Agregado <span data-bind="text: publicado"></span> - 
            <span class="fw-bold" style="cursor: pointer">Borrar</span> - 
            <span class="fw-bold" style="cursor: pointer">Descargar</span>
        </div>
    </div>
</div>